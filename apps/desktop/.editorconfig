# EditorConfig is awesome: https://EditorConfig.org

# 顶级配置文件
root = true

# 所有文件
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown 文件保留尾随空格（用于换行）
[*.md]
trim_trailing_whitespace = false

# JSON 文件特殊缩进
[*.json]
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# Makefile 使用制表符
[Makefile]
indent_style = tab

# Go 文件使用制表符
[*.go]
indent_style = tab

# Python 文件使用 4 个空格
[*.py]
indent_size = 4